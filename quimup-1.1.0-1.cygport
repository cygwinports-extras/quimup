inherit qt4-qmake

DESCRIPTION="Simple Qt4 client for the Music Player Daemon"
HOMEPAGE="http://www.coonsden.com/"
SRC_URI="mirror://sourceforge/musicpd/${PN}_${PV}_src.tar.gz"
SRC_DIR="${PN}_${PV}_src"

PATCH_URI="1.1.0-libmpdclient.patch"

src_install() {
	cd ${B}
	dobin quimup.exe
	dohicolor quimup Icons/quimup*
	make_desktop_entry quimup Quimup quimup "AudioVideo;Audio;Player;Qt"
}
